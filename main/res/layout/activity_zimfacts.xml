<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#f44336"
    tools:context="e.lenovo.BoazMuchirahondoProject.zimfacts">

    <Button
        android:id="@+id/btnFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="166dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:onClick="genFact"
        android:text="Next Fact"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="308dp" />

    <TextView
        android:id="@+id/FactTextbox"
        android:layout_width="404dp"
        android:layout_height="217dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:text="Welcome lets learn about Zimbabwe "
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</RelativeLayout>
